@model MVC_P.Models.User
@{
    ViewData["Title"] = "Kayýt Ol";
}
<h2>Kayýt Ol</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<form method="post">
    <div class="mb-3">
        <label asp-for="AdSoyad" class="form-label"></label>
        <input asp-for="AdSoyad" class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Þifre</label>
        <input name="password" type="password" class="form-control" />
        <span class="text-danger">@ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage</span>
    </div>
    <div class="mb-3">
        <label asp-for="Rol" class="form-label"></label>
        <select asp-for="Rol" class="form-select">
            <option>Ogrenci</option>
            <option>KulupYoneticisi</option>
            <option>Admin</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Kayýt Ol</button>
    <a class="btn btn-secondary" asp-action="Login">Giriþ</a>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

@model MVC_P.Models.Club
@{
    ViewData["Title"] = "Kulüp Ekle";
}
<h2>Kulüp Ekle</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">@ViewBag.Error</div>
}
<form method="post">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label"></label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="KurulusTarihi" class="form-label"></label>
        <input asp-for="KurulusTarihi" type="date" class="form-control" />
        <span asp-validation-for="KurulusTarihi" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="AktifMi" class="form-check-input" />
        <label asp-for="AktifMi" class="form-check-label"></label>
        <span asp-validation-for="AktifMi" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
